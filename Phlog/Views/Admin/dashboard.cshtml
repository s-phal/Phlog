@using Microsoft.AspNetCore.Identity;
@using Microsoft.EntityFrameworkCore;
@using Phlog.Data;
@model IEnumerable<Phlog.Models.Post>
@inject ApplicationDbContext _context;
@inject UserManager<SiteOwner> _userManager;

@{
    // get first row from SiteSettings table
    var siteSettings = await _context.SiteSettings.FirstOrDefaultAsync();

    // get instance of current signed in user
    var user = await _userManager.GetUserAsync(User);

    // get category context
    var categoryList = await _context.Category.ToListAsync();
}

<div class="container pb-3 mt-5">
    <div class="d-flex">
        <partial name="_Dashboard" />


        <div class="tab-content col">
            
            <partial name ="_DisplayMessage" />

            <!-- Categories START -->
            <div id="tab-categories" class="tab-pane col-sm-12 col-lg-4">
                <div class="card shadow">

                    <!-- Card header -->
                    <div class="card-header border-bottom">
                        <h5 class="card-header-title">Categories</h5>
                    </div>

                    <!-- Card body START -->
                    <div class="card-body">
                        <form asp-action="CreateCategory" asp-controller="Admin">
                            <div class=" row g-3 align-items-center">

                                <!-- Input item-->
                                <div class="w-100">
                                    <input type="text" name="Name" class="form-control" placeholder="Enter Category Name">
                                </div>

                                <!-- Save button -->
                                <div>
                                    <button type="submit" class="btn btn-info mb-0 text-white w-100">Create Category</button>
                                </div>
                            </div>
                        </form>
                        <div class="list-group mt-3">
                            @{
                                foreach (var category in categoryList)
                                {                                    
                                    <span class="list-group-item list-group-item-action d-flex">
                                    @category.Name
                                        <span class="ms-auto">
                                            <button class="bg-transparent border-0" data-bs-toggle="modal" data-bs-target="#editModal-@category.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square text-success me-2" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                            </button>
                                            <!-- DELETE Button trigger modal -->
                                            <button class="bg-transparent border-0" data-bs-toggle="modal" data-bs-target="#deleteModal-@category.Id">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3 text-danger" viewBox="0 0 16 16">
                                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                                                </svg>
                                            </button>
                                        </span>
                                    </span>

                                    <!-- Delete Category Start Modal -->
                                    <div class="modal" id="deleteModal-@category.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-sm">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">@category.Name</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete this category?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                                    <form asp-action="DeleteCategory" asp-controller="Admin">
                                                        <input type="hidden" name="Id" value="@category.Id" />
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Delete Category End Modal -->

                                    <!-- Edit Category Start Modal -->
                                    <form asp-action="EditCategory" asp-controller="Admin">
                                        <input type="hidden" name="Id" value="@category.Id" />

                                    <div class="modal" id="editModal-@category.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-sm">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit @category.Name</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <input type="text" name="Name" value="@category.Name" class="form-control" />
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-info text-white">Update</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </form>
                                    <!-- Edit Category End Modal -->                                      
                                }

                                
                            }

                        </div>
                    </div>
                    <!-- Card body END -->

                </div>
            </div>
            <!-- Categories END -->

            <!-- Posts Tab Start -->
            <div id="tab-posts" class="tab-pane list-group active show">
                <div class="list-group-item list-group-item-action bg-light text-white d-flex p-3">
                    <button class="btn btn-info text-white" data-bs-toggle="modal" data-bs-target="#createModal">Create Post</button>
                        <div class="ms-auto">
                            <form class="position-relative">
                                <input class="form-control pe-5 bg-white border-0" placeholder="Search">
                                <button type="submit" class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-black-50">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                      <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                    </svg>
                                </button>
                            </form>
                        </div>
                </div>
                <div class="list-group-item list-group-item-action bg-light text-black d-flex">
                    <span class="col-1">Id</span>
                    <span class="col-1 me-5">Thumbnail</span>
                    <span class="col-1">Model Name</span>
                    <span class="col-1 ms-auto">Instagram</span>
                    <span class="col-1 ms-5">Category</span>
                    <span class="col-1 me-3">Tags</span>
                    <span>Action</span>
                </div>
                @{
                    foreach (var post in Model)
                    {
                        var tagList = await _context.Tag
                            .Where(t => t.PostId == post.Id)
                            .ToListAsync();
                                <div class="list-group-item list-group-item-action align-items-center d-flex">
                                    <span class="col-1">@post.Id</span>
                                    <img class="col-1 me-5 img-thumbnail" src="~/uploads/@post.ImageFileName" />
                                    <span class="col-1">@post.ModelName</span>
                                    <span class="col-1 ms-auto">@post.InstagramUsername</span>
                                    <span class="col-1 ms-5">categoRY</span>
                                    <span class="col-1 me-3">@foreach (var tag in tagList)
                                {
                                    @(" " + tag.Name)
                                }</span>
                                    <span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pencil-square text-success me-2" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                        </svg>
                                        <!-- DELETE Button trigger modal -->
                                        <button class="bg-transparent border-0" data-bs-toggle="modal" data-bs-target="#deleteModal-@post.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-trash3 text-danger" viewBox="0 0 16 16">
                                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                                            </svg>
                                        </button>
                                    </span>
                                </div>

                                <!-- Delete Post Modal -->
                                <div class="modal fade" id="deleteModal-@post.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-sm">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">@post.Id - Delete post?</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this post?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                                <form asp-action="Delete" asp-controller="posts">
                                                    <input type="hidden" name="Id" value="@post.Id" />
                                                    <button type="submit" class="btn btn-danger">Delete</button>                
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    }
                }
            </div>
            <!-- Posts Tab End -->

			<!-- Owner Profile START -->
            <div id="tab-photographerprofile" class="tab-pane col-sm-12 col-lg-4">
				<div class="card shadow">

					<!-- Card header -->
					<div class="card-header border-bottom">
						<h5 class="card-header-title">Owner Profile</h5>
					</div>

					<!-- Card body START -->
                    <div class="card-body">
						<form asp-action="UpdateOwnerProfile" asp-controller="Admin" enctype="multipart/form-data">
                            <div class=" row g-3 align-items-center">
                           
                            <img src="~/uploads/@user.AvatarFileName" class="mx-auto " style="width: 150px; height: 150px"/>

                            <!-- Profile Picture -->
                            <div class="w-100">
                                <input type="file" name="AvatarImageFile" class="form-control"/>                            
                            </div>


							<!-- First Name -->
							<div class="w-50">
                                <input type="text" name="FirstName" value="@user.FirstName" class="form-control" placeholder="First Name" />
							</div>

							<!-- Last Name -->
							<div class="w-50">
								<input type="text" name="LastName" value="@user.LastName" class="form-control" placeholder="Last Name" />
							</div>

							<!-- About Me -->
							<div class="w-100">
								<textarea name="AboutMe" class="form-control" rows="7" placeholder="About Me">@user.AboutMe</textarea>
							</div>

							<!-- Phone Number  -->
							<div class="w-100">
                                    <input type="text" name="PhoneNumber" value="@user.PhoneNumber" class="form-control" placeholder="Phone Number" />
							</div>

                            <!-- Instagram -->
                            <div class="w-100">
                                    <input type="text" name="InstagramId" value="@user.InstagramId" class="form-control" placeholder="Instagram" />
                            </div>

                            <!-- Facebook -->
                            <div class="w-100">
                                <input type="text" name="FacebookId" value="@user.FaceBookId" class="form-control" placeholder="Facebook" />
                            </div>

                            <!-- Twitter-->
                            <div class="w-100">
                                <input type="text" name="TwitterId" value="@user.TwitterId" class="form-control" placeholder="Twitter">
                            </div>


							<!-- Save button -->
							<div class="d-sm-flex justify-content-end">
								<button type="submit" class="btn btn-info mb-0 text-white">Update</button>
							</div>
                            </div>
						</form>
					</div>
					<!-- Card body END -->

				</div>
			</div>
			<!-- Photographer Profile END -->

            <!-- Site Settings START -->
            <div id="tab-sitesettings" class="tab-pane col-sm-12 col-lg-5">
				<div class="card shadow">

					<!-- Card header -->
					<div class="card-header border-bottom">
						<h5 class="card-header-title">Site Settings</h5>
					</div>

					<!-- Card body START -->
                    <div class="card-body">
                        <form asp-action="UpdateSiteSettings" asp-controller="Admin">

							<!-- Input item -->
							<div class="mb-3 w-100">
								<input type="text" name="SiteName" class="form-control" placeholder="Site Name" value="@siteSettings.SiteName" />
							</div>

							<!-- Textarea item -->
							<div class="mb-3 w-100">
								<textarea class="form-control" name="SiteDescription" rows="3" placeholder="Site Description - Used for Search Engine Optimization.">@siteSettings.SiteDescription</textarea>
							</div>

							<!-- Save button -->
							<div class="d-sm-flex justify-content-end">
								<button type="submit" class="btn btn-info mb-0 text-white">Update</button>
							</div>
						</form>
					</div>
					<!-- Card body END -->

				</div>
			</div>
			<!-- Site Settings END -->


        </div>


    </div>
</div>

<!-- Create Post Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-sm modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Create a new post</h1>
      </div>
        <form asp-action="create" asp-controller="posts" enctype="multipart/form-data">
          <div class="modal-body">
              <div class="mb-3">
                <input type="file" name="ImageFile" class="form-control mb-3" accept="image/png" required/>
                <input type="text" name="ModelName" class="form-control mb-3" placeholder="Model Name" required/>
                <input type="text" name="InstagramUsername" class="form-control mb-3" placeholder="Instagram Handle" />
                <input type="text" name="Tag.Name" class="form-control mb-3" placeholder="Tags" />
                <select name="Category" class="form-select mb-3" required>
                    <option selected>Choose a category</option>
                    <option value="portrait">Portrait</option>
                    <option value="cosplay">Cosplay</option>
                </select>
              </div>
          </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-info text-white">Create Post</button>
              </div>
        </form>
    </div>
  </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
